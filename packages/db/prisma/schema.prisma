generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}
enum Role{
  ADMIN
  USER
}

model User{
  id String @id @default(cuid())
  name String @unique 
  phone String  
  email String
  password String
  publicKey String?
  role Role @default(USER)
  purchased Purchases[]
}

model Courses{
  id String @id @default(cuid())
  title String @unique 
  slug String @unique
  purchased Purchases[]
  calendarNotionId String
}

model Purchases{
  id String @id @default(cuid())
  userId String 
  courseId String 
  user User @relation(fields: [userId], references: [id])
  course Courses @relation(fields: [courseId], references: [id])
  @@unique([userId,courseId])
}
